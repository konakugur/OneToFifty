<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePage">


    <TextView
        android:id="@+id/myChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/firstPlayerArea"
        android:layout_marginBottom="45sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/endGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="45sp"
        android:textSize="50sp"
        android:visibility="visible"
        android:layout_above="@+id/restartButton"/>

    <Button
        android:id="@+id/restartButton"
        android:onClick="restartFunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Restart"/>

    <android.support.v7.widget.GridLayout
        android:id="@+id/firstPlayerArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        app:columnCount="4"
        app:rowCount="4"
        android:visibility="invisible">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="0"
            android:text="@string/number"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="1"
            android:text="@string/number"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="2"
            android:text="@string/number"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="3"
            android:text="@string/number"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="4"
            android:text="@string/number"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="5"
            android:text="@string/number"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="6"
            android:text="@string/number"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="7"
            android:text="@string/number"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="8"
            android:text="@string/number"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="9"
            android:text="@string/number"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="10"
            android:text="@string/number"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="11"
            android:text="@string/number"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="12"
            android:text="@string/number"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="13"
            android:text="@string/number"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="14"
            android:text="@string/number"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberSelected"
            android:tag="15"
            android:text="@string/number"
            app:layout_column="3"
            app:layout_row="3" />

    </android.support.v7.widget.GridLayout>
</RelativeLayout>