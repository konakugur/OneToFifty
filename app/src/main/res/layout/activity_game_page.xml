<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePage">



    <android.support.v7.widget.GridLayout
        android:id="@+id/firstPlayerArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="4"
        app:rowCount="4">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_column="0"
            app:layout_row="0"
            android:tag="0"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_column="1"
            app:layout_row="0"
            android:tag="1"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_column="2"
            app:layout_row="0"
            android:tag="2"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_row="0"
            app:layout_column="3"
            android:tag="3"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_row="1"
            app:layout_column="0"
            android:tag="4"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_row="1"
            app:layout_column="1"
            android:tag="5"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_row="1"
            app:layout_column="2"
            android:tag="6"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_row="1"
            app:layout_column="3"
            android:tag="7"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_row="2"
            app:layout_column="0"
            android:tag="8"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_row="2"
            app:layout_column="1"
            android:tag="9"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_row="2"
            app:layout_column="2"
            android:tag="10"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            app:layout_row="2"
            app:layout_column="3"
            android:tag="11"
            android:onClick="onNumberSelected"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
